<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>

        <variable
            name="item"
            type="com.jay.movies.ui.model.UiPosterModel" />

        <variable
            name="viewModel"
            type="com.jay.movies.ui.movie.MovieViewModel" />

    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:onClick="@{() -> viewModel.onClickItem(item.id)}"
        tools:background="@color/poster_background">

        <ImageView
            android:id="@+id/iv_poster_post"
            android:layout_width="@dimen/poster_image_width"
            android:layout_height="@dimen/poster_image_height"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_movie_black"
            tools:src="@drawable/ic_movie_black" />

        <TextView
            android:id="@+id/tv_poster_release_date"
            android:text="@{item.releaseDate}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#00d0a8"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_poster_post"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020-09-04" />

        <TextView
            android:id="@+id/tv_poster_title"
            android:text="@{item.title}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_poster_post"
            app:layout_constraintTop_toBottomOf="@id/tv_poster_release_date"
            tools:text="Mulan" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_poster_post"
            app:layout_constraintTop_toBottomOf="@id/tv_poster_title" >

            <ImageView
                android:src="@drawable/ic_star_orange_light"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_poster_vote_average"
                android:text="@{item.voteAverage}"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="7.4" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>