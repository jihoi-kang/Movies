<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.jay.movies.model.UiGenreModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/space_small"
        android:paddingBottom="@dimen/space_xx_small"
        tools:background="@color/common_background">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sessionChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stroke_movie_genre_radius_10"
            android:paddingStart="@dimen/space_small"
            android:paddingTop="@dimen/space_x_small"
            android:paddingEnd="@dimen/space_small"
            android:paddingBottom="@dimen/space_x_small"
            android:text="@{item.name}"
            android:textColor="@color/movie_genre"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Action" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
