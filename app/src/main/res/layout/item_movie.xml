<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.jay.movies.model.Movie" />

        <variable
            name="viewModel"
            type="com.jay.movies.ui.movie.MovieViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_movie_background"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> viewModel.onClickItem(item.id)}"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/iv_movie_post"
            android:layout_width="@dimen/movie_post_image_width"
            android:layout_height="@dimen/movie_post_image_height"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:moviePostImage="@{item.poster_path}"
            tools:src="@drawable/ic_error_outline_grey" />

        <TextView
            android:id="@+id/tv_movie_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{item.release_date}"
            android:textColor="#00d0a8"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_post"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020-09-04" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="4dp"
            android:text="@{item.title}"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_post"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_release_date"
            tools:text="Mulan" />

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_post"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_title">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_orange_light" />

            <TextView
                android:id="@+id/tv_movie_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:floatText="@{item.vote_average}"
                tools:text="7.4" />

        </LinearLayout>

        <com.jay.movies.widget.NoTouchRecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:allGenres="@{viewModel.allGenres}"
            app:genreIds="@{item.genre_ids}"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_post"
            app:layout_constraintTop_toBottomOf="@id/ll_star"
            tools:listitem="@layout/item_movie_genre" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>